/* pages/apply/apply.wxss */
page{
    padding-top:70px;
    background:#fafafa;
}
.apply-step{
    position:fixed;
    left:0;
    top:0;
    right:0;
    height:140rpx;
    display:flex;
    align-items:center;
    flex-wrap:wrap;
    z-index:420;
    background-color:#fafafa;
}
.apply-step .bar{
    position:absolute;
    left:0;
    height:2px;
    transition-duration:.5s;
    transition-timing-function:ease-in;
    top:50rpx;
    background:#27CFB1;
    z-index:1;
}
.barview{
    position:absolute;
    height:2px;
    background:#eee;
    left:0;
    right:0;
    top:50rpx;
    z-index: 0;
}
.step-item{
    width:33.333333%;
    text-align:center;
    position:relative;
    color:#ccc;
    font-size:24rpx;
}
.step-item.active{
    color:#27CFB1;
}
