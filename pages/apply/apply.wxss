.step-item .num{
    display:block;
    width:26px;
    height:26px;
    background:#eee;
    line-height:26px;
    text-align:center;
    margin:0 auto;
    border-radius:90px;
    font-size:18px;
    margin-bottom:12rpx;
    position:relative;
    z-index:9;
    color:#ccc;
}

.step-item.active .num{
    background:#27CFB1;
    color:#fff;
}

.fgroup{
    position:relative;
    align-items:center;
    padding:0 30rpx;
    box-sizing:border-box;
    background:#fff;
}
.fgroup.block{
    margin-bottom:30rpx;
}

.fgroup:after{
     content:'';
     display:block;
     position:absolute;
     border-bottom:1px solid #eee;
     right:0;
     bottom:0;
     left:0;
     transform:scale(.5);
     transform-origin:0 100%;
     width:200%;
}
.fgroup.block:after{
    border:none;
}
.apply-form .fgroup:last-child:after{
    border:none;
}
.fgroup label{
    font-size:30rpx;
    color:#666;
    position:absolute;
    padding:28rpx 0;
    left:30rpx;
    top:0;
     height:1.4rem;
      line-height:1.4rem;
    min-height:1.4rem;
}

.fgroup input,
.fgroup picker{
    padding:28rpx 0;
    text-align:right;
    font-size:32rpx;
    color:#444;
    position:relative;
    width:100%;
    padding-right:10px;
    height:1.4rem;
    min-height:1.4rem;
    line-height:1.4rem;
}
.fgroup .picker{
    padding-right:24rpx;
    position:relative;
     height:1.4rem;
    min-height:1.4rem;
}
.fgroup .type{
    position:relative;
    z-index:2;
    overflow:hidden;
    padding-left:180rpx;
}
.fgroup .picker:after{
    content:'';
    width:5px;
    height:5px;
    border:2px solid #eee;
    border-left:none;
    border-bottom:none;
    transform:rotate(45deg);
    display:block;
    margin-left:10rpx;
    position:absolute;
    right:1px;
    top:50%;
    margin-top:-4px;
}
.fgroup .textarealine{
    width:100%;
    padding-left:0;
    font-size:32rpx;
    line-height:1.5;
    padding-top:100rpx;
    color:#444;

}
.fgroup .textarealine textarea{
    width:100%;
    height:140rpx;
    padding-bottom:30rpx;
}
.photo{
    margin:30rpx 0;
    background:#fff;
}
.photo .label{
    position:inherit;
    line-height:1.4;
    text-align:left;
    display: block;
    padding:0;
    left:inherit;
    padding-left:30rpx;
    margin: 0 -30rpx;
    background:#fafafa;
    
}
.photo .icon{
    color:#999;
}
.photo .type{
    display:flex;
    align-items: center;
    justify-content:space-between;
    padding:0;
    height:200rpx;
}
.photo:after{
    border:none;
}
.photo .type .upfile{
    text-align:center;
    height:100%;
    display:flex;
    align-items: center;
    flex-direction:column;
    justify-content:center;
}
.photo .type .upfile .title{
    font-size:24rpx;
    color:#999;
    line-height:2;
}
.photo .upfile.hide{
    display:none;
}
.photo .type>view{
    width:50%;
}
.reference{
    text-align:center;
    position:relative;
}
.reference image{
    width:100%;
    height:220rpx;
    opacity:1;
    filter: gray;
}
.reference image:after{
    content:'';
    position:absolute;
    left:0;
    right:0;
    top:0;
    bottom:0;
    background:rgba(0, 0, 0, .3);
}
.reference .title{
    font-size:28rpx;
    line-height:32rpx;
    position:absolute;
    right:16rpx;
    top:16rpx;
    width:100rpx;
    height:100rpx;
    display:flex;
    justify-content:center;
    align-items:center;
}
.reference .title:after,
.reference .title:before{
    content:'';
    border-radius:90px;
    position:absolute;
    border:2px solid #fff;

}
.reference .title:after{
    left:0;
    right:0;top:0;bottom:0;
}
.reference .title:before{
    left:8rpx;
    right:8rpx;
    bottom:8rpx;
    top:8rpx;
    border:2px dotted #fff;
}
.reference .title text{
  
    padding:7rpx 12rpx;
    margin:0 -14rpx;
    background:#fff;
    color:#999;
    font-size:23rpx;
    border-radius:3px;
    position:relative;
    z-index:9;
}
.btnbar {
    text-align:center;
    padding:20px 0 60px;
}
.btnbar .info{
    margin:0 30rpx 50rpx;
    font-size:24rpx;
    text-align:left;
    color:#27CFB1;
}
.btnbar .btn{
    display:inline-block;
    width:40%;
    padding:10px;
    font-size:36rpx;
    background:#27CFB1;color:#fff;
    margin:0 5px;
    border-radius:4rpx;
    vertical-align:top;
    line-height:normal;
}

.btnbar .btns-hover{
    background:#ccc;
    color:#888;
}

.btnbar .btn-hover{
    background:#12be9f;
    color:#fff;
}
.btnbar .btn.prev{
    background:#eee;color:#888;
}

.wimg{
    display:none;
    height:100%;
}
.wimg.show{
    display:block;
}
.wimg image{
    width:100%;
    height:100%;
}