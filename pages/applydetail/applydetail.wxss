/* pages/applydetail/applydetail.wxss */

.head{
    background:#27CFB1;
    height:200rpx;
    position:relative;
    padding:90rpx 0 30rpx 40rpx;
}
.head .name{
    font-size:44rpx;line-height:1.8;
}
.head .shopname{
    font-size:28rpx;line-height:1.6;
}
.stat{
    position:absolute;right:40rpx;top:30%;
}
.head .name,
.head .shopname{
    color:#fff;
}
.stat{
    width:110rpx;
    height:110rpx;
    opacity:.8;
}
.stat text{
    position:absolute;
    left:-16rpx;
    right:-16rpx;
    top:50%;
    margin-top:-30rpx;
    padding:12rpx 0;
    background:#fff;
    font-size:28rpx;
    text-align:center;
    color:#27CFB1;
    border-radius:3px;
    z-index:9;
}
.stat:after,
.stat:before{
    content:'';
    border-radius:90px;
    position:absolute;
    border:2px solid #fff;

}
.stat:after{
    left:0;
    right:0;top:0;bottom:0;
}
.stat:before{
    left:8rpx;
    right:8rpx;
    bottom:8rpx;
    top:8rpx;
    border:2px dotted #fff;
}
.coltitle{
    line-height:2;
    padding:30rpx 30rpx 10rpx;
    color:#444;
    font-size:24rpx;
}
.linegroup{
    background:#fff;
}
.linegroup .lines:last-child:after{
    background:transparent;
}

.imglist{
  width:50%;
  display:inline-block;
  font-size:20rpx;
  text-align:center;
  margin-top:20rpx;
}
.imglist img{
    width:100%;
    height:100%;
}
.imgarea{
  width:330rpx;
  height:220rpx;
}
.title{
  padding-top:10rpx;
}
.block-button{
    border-radius:4rpx;
    margin:40rpx 30rpx;
    text-align:center;
    background:#27CFB1;color:#fff;
    padding:14rpx 0;
    font-size:30rpx;
}
page{
    padding-bottom:60rpx;
}